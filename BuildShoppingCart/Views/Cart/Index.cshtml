@{
    Layout = null;
}


<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <h3>Cart Info</h3>
    <span>Item Quantity in the cart</span>@ViewBag.Count

    <table border="1" cellpadding="2" cellspacing="2">
        <tr>

            <th>Action</th>
            <th>Id</th>
            <th>Name</th>
            <th>Photo</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Sub Total</th>
        </tr>



        @foreach (var item in ViewBag.cart)
        {
           
                <tr>

                    <td align="center">
                        <a asp-controller="cart" asp-action="remove" asp-route-id="@item.Product.Id">X</a>
                    </td>
                    <td>@item.Product.Id</td>
                    <td>@item.Product.Name</td>
                    <td><img src="~/images/@item.Product.Photo" width="50" /></td>
                    <td>@item.Product.Price</td>
                    <td><input type="number" value="@item.Quantity" /></td>
                    <td>@(item.Product.Price * item.Quantity)</td>
                </tr> 
                
           
        }
        <tr>
            <td colspan="6" align="right">Total</td>
            <td>@ViewBag.total</td>
        </tr>


    </table>

    <a class="left carousel-control" href="#featured" data-slide="prev"><</a>
    <a class="left carousel-control" href="#featured" data-slide="next">></a>
    <br />
    <a asp-controller="product">Continue Shopping</a>
    <a asp-controller="cart" asp-action="checkout">checkout</a>
</body>
</html>