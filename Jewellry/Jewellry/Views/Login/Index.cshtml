<environment>
    <link rel="stylesheet" href="/css/login.css" />
</environment>

<div class="info-login">
    <div class="container">
        <div class="row">
            <div class="col-md-1"></div>
            <div class="col-md-4 information">
                <h2 class="text-center">Already a member?</h2>
                <form method="post">
                    <div class="form-group">
                        <label for="name_or_email">Email:</label>
                        <input type="text" class="form-control" placeholder="Email..."/>
                    </div>
                    <div class="form-group">
                        <label for="password">Password:</label>
                        <input type="password" class="form-control" placeholder="Password..."/>
                        <a asp-controller="Login" asp-action="PasswordReset" style="font-size:13px; color: #a09e9e;">Forgot password?</a><br />
                    </div>
                    <div class="form-group">
                        <input type="submit" class="btn-dark" value="Login" />
                        Don't have an account ?<a asp-controller="Login" asp-action="Register">Sign up</a>
                    </div>
                </form>
            </div>
            <div class="col-md-1"></div>
            <div class="col-md-5 img-login"></div>
            <div class="col-md-1"></div>
        </div>
    </div>
</div>