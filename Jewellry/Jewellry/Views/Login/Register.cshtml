<environment>
    <link rel="stylesheet" href="/css/login.css" />
</environment>

<div class="info-signup">
    <div class="container">
        <div class="row">
            <div class="col-md-1"></div>
            <div class="col-md-4 information">
                <h2 class="text-center">Let's get you on board</h2>
                <form asp-action="Index" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <div class="form-group name-left">
                            <label class="control-label">Name:</label>
                            <input type="text" class="form-control" />
                        </div>
                        <div class="form-group username-right">
                            <label class="control-label">Username:</label>
                            <input type="text" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Phone:</label>
                        <input type="number" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label class="control-label">Email</label>
                        <input type="email" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label class="control-label">Birthday:</label>
                        <input type="date" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label class="control-label">Address:</label>
                        <input type="text" class="form-control" />
                    </div>
                    <div class="form-group">
                        <span>
                            <input type="checkbox" id="checkbox_user_agree_to_term" name="user[agree_to_term]">
                            <label for="checkbox_user_agree_to_term">Creating an account means you’re okay with our Terms of Service, Privacy Policy, and our default Notification Settings.<a href="">Terms & Conditions</a></label>
                        </span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="CREATE ACCOUNT" class="btn-dark" onclick="return Validate();" />
                        Already have an account ? <a asp-controller="Login" asp-action="Index">Login</a>
                    </div>
                </form>
            </div>
            <div class="col-md-1"></div>
            <div class="col-md-5 img-signup"></div>
            <div class="col-md-1"></div>
        </div>
    </div>
</div>
<script>
    function Validate() {
        var chkOK = document.getElementById('checkbox_user_agree_to_term');
        if (!chkOK.checked) {
            chkOK.focus();
            alert("You do not agree to the terms!");
            return false;
        }
        return true;
    }
</script>