@page
@model LoginRegister.Pages.IndexModel
@{
    Layout = null;

}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width"/>
    <title>Index</title>
</head>
<body>
    <h3>
        Sign In 
    </h3>
    <form method="post" asp-page="index">
        <table>
            <tr>
                <td>
                    Username
                </td>
                <td>
                    <input asp-for="@Model.account.Username" />

                </td>
            </tr>
            <tr>
                <td>
                    Password
                </td>
                <td>
                    <input type="password" asp-for="@Model.account.Password" />

                </td>
            </tr>
            <tr>
                <td>
                    &nbsp;
                </td>
                <td>
                    <input type="submit" value="login" />
                    <br />
                    <a asp-page="signup">Sign Up</a>
                </td>
            </tr>
        </table>
    </form>
</body>
</html>