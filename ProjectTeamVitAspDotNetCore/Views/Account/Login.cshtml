
@model ProjectTeamVitAspDotNetCore.Models.User
<environment>
    <link rel="stylesheet" href="/css/login.css" />
</environment>
@{ 
    Layout = "_LayoutLogin";
}

<div class="img-login">
        <div class="row">
            <div class="col-md-4"></div>
            <div class="col-md-4 information">
                <h2 class="text-center">Login now</h2>
                <form method="post" asp-controller="Account" asp-action="Login">
                    <p style="color:red">@ViewBag.error</p>
                    <div class="form-group">
                        @*<label for="Email" hidden>Email:</label>*@
                        <input type="email" asp-for="Email" name="Email" id="Email" class="form-control form-control-lg" placeholder="Email..." />
                        <i class="fa fa-user" aria-hidden="true"></i>
                    </div>
                    <div class="form-group">
                        @*<label for="Password" hidden>Password:</label>*@
                        <input type="password" asp-for="Password" name="Password" id="Password" class="form-control form-control-lg" placeholder="Password..." />
                        <a asp-controller="Account" asp-action="PasswordReset" style="font-size:13px; color:white;">Forgot password?</a><a asp-controller="Account" asp-action="Register">Sign up</a>
                        <i class="fa fa-unlock" aria-hidden="true"></i>
                    </div>
                    <div class="text-center">
                        <input type="submit" class="btn-light" value="LOGIN" />
                        
                    </div>
                </form>
            </div>
            <div class="col-md-4"></div>
        </div>
</div>