@model ProjectTeamVitAspDotNetCore.Models.Order

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_LayoutProfile.cshtml";

}

<section class="content pb-3">
    <div class="container-fluid h-100">
        <div class="card card-row card-secondary">
            <div class="card-header">
                <div style="text-align:center">
                    <h2> @Html.DisplayFor(model => model.Name)</h2>
                </div>
            </div>
            <div class="card-body">

                <dl class="row">
                    <dl class="row">
                        <dt class="col-sm-2">
                            Create Time:
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.CreateTime)
                        </dd>

                        <dt class="col-sm-2">
                            Customer:
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Name)
                        </dd>
                        <dt class="col-sm-2">
                            Address:
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Address)
                        </dd>
                        <dt class="col-sm-2">
                            Birthday:
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Birthday)
                        </dd>
                        <dt class="col-sm-2">
                            Gender:
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Gender)
                        </dd>
                        <dt class="col-sm-2">
                            Phone:
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Phone)
                        </dd>
                        <dt class="col-sm-2">
                            Zip Code:
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.ZipCode)
                        </dd>
                        <dt class="col-sm-2">
                            Status:
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Status)
                        </dd>
                        <dt class="col-sm-2">
                            List Produt:
                        </dt>
                        <dd class="col-sm-10">
                            @foreach (var product in ViewBag.products)
                            {
                                <span>@product.Name; &nbsp;&nbsp;</span>
                            }
                        </dd>
                        <dt class="col-sm-2">
                            Total Price:
                        </dt>
                        <dd class="col-sm-10">
                            @ViewBag.total
                        </dd>
                    </dl>
                </dl>

            </div>
        </div>
    </div>
</section>



<div>
    <a asp-action="ListOrder" class="btn btn-success">Back To List</a>
</div>
