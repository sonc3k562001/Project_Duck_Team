@model ProjectTeamVitAspDotNetCore.Models.User

<environment>
    <link rel="stylesheet" href="/css/login.css" />
</environment>

<div class="info-reset">
    <div class="container">
        <div class="row">
            <div class="col-md-1"></div>
            <div class="col-md-4 information">
                <h2 class="text-center">Forgot Password?</h2>
                <p style="color:red">@ViewBag.msg</p>
                <form asp-controller="Account" asp-action="PasswordReset">
                    <div class="form-group">
                        <label for="name">Email Address:</label>
                        <input type="email" asp-for="Email" class="form-control" />
                    </div>
                    <div class="form-group">
                        <input type="submit" class="btn-dark" value="Reset Password" />
                    </div>
                </form>
            </div>
            <div class="col-md-1"></div>
            <div class="col-md-5 img-reset"></div>
            <div class="col-md-1"></div>
        </div>
    </div>
</div>