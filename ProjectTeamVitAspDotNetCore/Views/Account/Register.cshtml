@model ProjectTeamVitAspDotNetCore.Models.User

@{ Layout = "_LayoutLogin"; }
<environment>
    <link rel="stylesheet" href="~/css/login.css" />
</environment>

<div class="info-signup">
    <div class="container">
        <div class="row">
            <div class="col-md-1"></div>
            <div class="col-md-4 information">
                <h2 class="text-center">Let's get you on board</h2>
                <form asp-controller="Account" enctype="multipart/form-data" asp-action="Register" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <div class="form-group name-left">
                            <label asp-for="Fname" class="control-label">First Name: </label>
                            <input name="Fname" class="form-control" />
                            <span asp-validation-for="Fname" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="form-group username-right">
                            <label asp-for="Lname" class="control-label">Last Name: </label>
                            <input asp-for="Lname" name="Lname" class="form-control" />
                            <span asp-validation-for="Lname" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="Bdate" class="control-label">Birthday: </label>
                        <input type="date" asp-for="Bdate" name="Bdate" min="1900-01-01" max="2021-01-31" class="form-control" />
                        <span asp-validation-for="Bdate" class="text-danger" min="1900-01-01" max="2021-01-31"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Address" class="control-label">Address: </label>
                        <input asp-for="Address" name="Address" class="form-control" />
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Phone" class="control-label">Phone: </label>
                        <input asp-for="Phone" name="Phone" class="form-control" />
                        <span asp-validation-for="Phone" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Email" class="control-label">Email: </label>
                        <input type="Email" asp-for="Email" name="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Password" class="control-label">Password: </label>
                        <input type="password" asp-for="Password" name="Password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ConfirmPassword" class="control-label">Confirm Password: </label>
                        <input type="password" asp-for="ConfirmPassword" name="ConfirmPassword" class="form-control" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ZipCode" class="control-label">Zip Code</label>
                        <input asp-for="ZipCode" name="ZipCode" class="form-control" />
                        <span asp-validation-for="ZipCode" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Avatar" class="control-label">Avatar: </label>
                        <input type="file" asp-for="Avatar" name="Avatar" class="form-control" />
                        <span asp-validation-for="Avatar" class="text-danger"></span>
                    </div>
                    <div class="form-group gender">
                        <label asp-for="Gender" class="control-label">Gender: </label>
                        <input type="radio" asp-for="Gender" name="Gender" value="Man" class="form-check-input" /><span>Man</span>
                        <input type="radio" asp-for="Gender" name="Gender" value="Woman" class="form-check-input" /><span>Woman</span>
                        <span asp-validation-for="Gender" class="text-danger"></span>
                    </div>
                    <input type="hidden" asp-for="Eable" value="true" name="Eable" class="form-control" />
                    <div class="form-group">
                        <input type="submit" value="CREATE ACCOUNT" class="btn-dark" />
                    </div>
                </form>


            </div>
            <div class="col-md-1"></div>
            <div class="col-md-5 img-signup"></div>
            <div class="col-md-1"></div>
        </div>
    </div>
</div>

<script>
    function Validate() {
        var chkOK = document.getElementById('checkbox_user_agree_to_term');
        if (!chkOK.checked) {
            chkOK.focus();
            alert("You do not agree to the terms!");
            return false;
        }
        return true;
    }
</script>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
