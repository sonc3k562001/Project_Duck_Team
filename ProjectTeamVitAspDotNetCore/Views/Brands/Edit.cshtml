@model ProjectTeamVitAspDotNetCore.Models.Brand

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h4 style="padding-left:20px;padding-bottom:20px">Create Brands</h4>

<div class="container bg-white pt-3">
    <div class="mt-4" style="margin-left:60px">
        <div class="row">
            <div class="col-md-4">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="BrandId" />
                    <div class="form-group">
                        <label asp-for="BrandName" class="control-label"></label>
                        <input asp-for="BrandName" class="form-control" />
                        <span asp-validation-for="BrandName" class="text-danger"></span>
                    </div>                
                    <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-success" />
                        <button type="button" class="btn btn-danger">
                            <a asp-action="Index" class="text-white">Back to List</a>
                        </button>
                    </div>
                </form>
            </div>
        </div>
        </div>
</div>
    


    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
