@model ProjectTeamVitAspDotNetCore.Models.Category

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h4 style="padding-left:20px;padding-bottom:20px">Category Details</h4>

<div class="container bg-white pt-3">
    <div class="mt-4" style="margin-left:60px">
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.TypeName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.TypeName)
            </dd>
        </dl>

        <div class="form-group pb-3">

            <button type="button" class="btn btn-success ">
                <a asp-action="Edit" asp-route-id="@Model.IdCategory" style="color:white">Edit</a>
            </button>

            <button type="button" class="btn btn-danger">
                <a asp-action="Index" style="color:white">Back to List</a>
            </button>
        </div>
    </div>  
</div>

