@model ProjectTeamVitAspDotNetCore.Models.Color

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card card-primary">
    <div class="card-header">
        <h3 class="card-title">Create Color</h3>
    </div>

    <form asp-controller="Colors" enctype="multipart/form-data" asp-action="Create" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="card-body">
            <div class="form-group">
                <label for="exampleInputEmail1">Color Code</label>
                <input type="text" asp-for="ColorId" class="form-control" id="exampleInputEmail1" >
                <span asp-validation-for="ColorId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="exampleInputPassword1">Color Name</label>
                <input asp-for="Name" type="text" class="form-control" id="exampleInputPassword1" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
           
        </div>
        <div class="card-footer">
            <button type="submit" class="btn btn-primary">Create New Brand</button>
            <a asp-action="index" class="btn btn-success">Back To List</a>
        </div>
    </form>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
