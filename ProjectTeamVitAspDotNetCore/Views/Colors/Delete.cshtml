@model ProjectTeamVitAspDotNetCore.Models.Color

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h4 style="padding-left:20px;padding-bottom:20px">Delete Colors</h4>

<h3>Are you sure you want to delete this?</h3>
<div class="container bg-white pt-3">
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
    </dl>

    <div class="col-lg-12">
        <form asp-action="Delete">
            <input type="hidden" asp-for="ColorId" />
            <div class="row pb-4">
                <div class="col-lg-6">
                    <div class="form-group">
                        <input type="submit" value="Delete" class="btn btn-danger float-right" />
                    </div>
                </div>
                <div class="col-lg-6">
                    <button type="button" class="btn btn-danger">
                        <a asp-action="Index" class="text-white">Back to List</a>
                    </button>
                </div>
            </div>
        </form>
    </div>

</div>
