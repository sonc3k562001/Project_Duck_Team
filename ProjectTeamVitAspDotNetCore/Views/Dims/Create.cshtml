@model ProjectTeamVitAspDotNetCore.Models.Dim

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card card-primary">
    <div class="card-header">
        <h3 class="card-title">Create Diamond</h3>
    </div>

    <form asp-controller="Dims" enctype="multipart/form-data" asp-action="Create" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <p style="color:red">@ViewBag.Error</p>
        <div class="card-body">
            <div class="form-group">
                <label for="exampleInputEmail1">Code</label>
                <input type="text" asp-for="DimId" class="form-control" id="exampleInputEmail1" >
                <span asp-validation-for="DimId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="exampleInputPassword1">Name</label>
                <input asp-for="Name" type="text" class="form-control" id="exampleInputPassword1" >
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="exampleInputPassword1">Size</label>
                <input asp-for="DimSize" class="form-control" id="exampleInputPassword1">
                <span asp-validation-for="DimSize" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="exampleInputPassword1">Carat Of Diamond</label>
                <input asp-for="DimCrt" class="form-control" id="exampleInputPassword1">
                <span asp-validation-for="DimCrt" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="exampleInputPassword1">Total Pcs Of Diamond In Item</label>
                <input asp-for="DimPcs" class="form-control" id="exampleInputPassword1" >
                <span asp-validation-for="DimPcs" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label>Weight Of Each Diamond(Grams)</label>
                <input asp-for="DimGm" class="form-control" id="exampleInputPassword1">
                <span asp-validation-for="DimGm" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label>Rate Of Each Diamond</label>
                <input asp-for="DimRate" class="form-control" id="exampleInputPassword1">
                <span asp-validation-for="DimRate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label>Total Amount Of Diamond In Item</label>
                <input asp-for="DimAmt" class="form-control" id="exampleInputPassword1">
                <span asp-validation-for="DimAmt" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Certify</label>
                <input asp-for="Certify" class="form-control" id="exampleInputPassword1">
                <span asp-validation-for="Certify" class="text-danger"></span>
            </div>
        </div>
        <div class="card-footer">
            <button type="submit" class="btn btn-primary">Create New Diamond</button>
            <a asp-action="index" class="btn btn-success">Back To List</a>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
