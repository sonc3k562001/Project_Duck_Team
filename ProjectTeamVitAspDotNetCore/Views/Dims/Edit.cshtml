@model ProjectTeamVitAspDotNetCore.Models.Dim

@{ ViewData["Title"] = "Edit";
                Layout = "~/Views/Shared/_AdminLayout.cshtml"; }

<h4 style="padding-left:20px;padding-bottom:20px">Edit dims</h4>


<div class="container bg-white pt-3">
    <div class="col-lg-12">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="DimId" />
            <div class="row">
                <div class="col-lg-4">
                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="DimCrt" class="control-label"></label>
                        <input asp-for="DimCrt" class="form-control" />
                        <span asp-validation-for="DimCrt" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="DimPcs" class="control-label"></label>
                        <input asp-for="DimPcs" class="form-control" />
                        <span asp-validation-for="DimPcs" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="form-group">
                        <label asp-for="DimGm" class="control-label"></label>
                        <input asp-for="DimGm" class="form-control" />
                        <span asp-validation-for="DimGm" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="DimRate" class="control-label"></label>
                        <input asp-for="DimRate" class="form-control" />
                        <span asp-validation-for="DimRate" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="DimAmt" class="control-label"></label>
                        <input asp-for="DimAmt" class="form-control" />
                        <span asp-validation-for="DimAmt" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="form-group">
                        <label asp-for="Certify" class="control-label"></label>
                        <input asp-for="Certify" class="form-control" />
                        <span asp-validation-for="Certify" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="DimSize" class="control-label"></label>
                        <input asp-for="DimSize" class="form-control" />
                        <span asp-validation-for="DimSize" class="text-danger"></span>
                    </div>
                </div>
            </div>
            
                  
            <div class="row pb-5 pt-4">
                <div class="col-lg-6">
                    <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-success float-right" />
                    </div>
                </div>
                <div class="col-lg-6">
                    <button type="button" class="btn btn-danger">
                        <a asp-action="Index" class="text-white">Back to List</a>
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>




@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
