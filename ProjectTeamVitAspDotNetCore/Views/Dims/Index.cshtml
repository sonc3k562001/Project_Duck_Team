@model IEnumerable<ProjectTeamVitAspDotNetCore.Models.Dim>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h4 style="padding-left:20px;padding-bottom:20px">Dims Management </h4>

<div class="container bg-white">
    <div class="col-lg-12 pt-3">
        <div class="row">
            <div class="col-lg-8">
                <form asp-controller="Order" asp-action="index">
                    <div>
                        <h6>Search for an order :</h6>
                    </div>
                    <div>
                        <input type="text" name="searchString" style="height:33px;width:400px" />
                        <input type="submit" value="Search" style="height:33px" />
                    </div>

                    @*<a asp-controller="Order" asp-action="index">All</a>*@
                </form>
            </div>
            <div class="col-lg-4">
                <button type="button" class="btn btn-success" style="margin-left:225px;margin-top:22px;">
                    <a asp-action="Create" style="color:white">Create New</a>
                </button>
            </div>
        </div>
    </div>

    <div class="pt-3 pb-3">
        <table class="table mt-3">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DimCrt)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DimPcs)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DimGm)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DimRate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DimAmt)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Certify)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DimSize)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DimCrt)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DimPcs)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DimGm)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DimRate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DimAmt)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Certify)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DimSize)
        </td>
        <td>
            <a asp-action="Edit" asp-route-id="@item.DimId">Edit</a> |
            <a asp-action="Details" asp-route-id="@item.DimId">Details</a> |
            <a asp-action="Delete" asp-route-id="@item.DimId">Delete</a>
        </td>
    </tr>
}
            </tbody>
        </table>
    </div>
</div>



