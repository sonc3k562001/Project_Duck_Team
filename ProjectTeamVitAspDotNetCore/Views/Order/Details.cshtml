@model ProjectTeamVitAspDotNetCore.Models.Order

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>Category</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Create Time:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CreateTime)
        </dd>

        <dt class="col-sm-2">
            Customer:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            Address:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Address)
        </dd>
        <dt class="col-sm-2">
            Birthday:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Birthday)
        </dd>
        <dt class="col-sm-2">
            Gender:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Gender)
        </dd>
        <dt class="col-sm-2">
            Phone:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Phone)
        </dd>
        <dt class="col-sm-2">
            Zip Code:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ZipCode)
        </dd>
        <dt class="col-sm-2">
            Status:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Status)
        </dd>
        <dt class="col-sm-2">
            List Produt:
        </dt>
        <dd class="col-sm-10">
            @foreach (var product in ViewBag.products)
            {
                <span>@product.Name &nbsp;&nbsp;</span>
            }
        </dd>
        <dt class="col-sm-2">
            Total Pridce:
        </dt>
        <dd class="col-sm-10">
            @ViewBag.total
        </dd>
    </dl>
</div>

<div>
    <form asp-controller="Order" asp-action="Edit" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" class="form-control" />
        <input type="hidden" asp-for="CreateTime" class="form-control" />
        <input type="hidden" asp-for="Name" class="form-control" />
        <input type="hidden" asp-for="Birthday" class="form-control" />
        <input type="hidden" asp-for="ZipCode" class="form-control" />
        <input type="hidden" asp-for="Gender" class="form-control" />
        <input type="hidden" asp-for="Address" class="form-control" />
        <input type="hidden" asp-for="Phone" class="form-control" />
        <input type="hidden" asp-for="Email" class="form-control" />
        <input type="hidden" asp-for="Status" />
        <div class="form-group">
            @if (@ViewBag.status == true)
            {
                <input type="submit" value="unfinished " class="btn btn-primary" />
            }
            @if (@ViewBag.status == false)
            {
                <input type="submit" value="Done" class="btn btn-primary" />
            }
        </div>
    </form>
    <a asp-action="Index">Back to List</a>
</div>
