@model IEnumerable<ProjectTeamVitAspDotNetCore.Models.Order>

@{ ViewData["Title"] = "Index";
                Layout = "~/Views/Shared/_AdminLayout.cshtml"; }

<h4 style="padding-left:20px">Order list</h4>

<div class="container bg-white">
    <div  class="col-lg-12 pt-3">
        <div class="row">
            <div class="col-lg-9">
                <form asp-controller="Order" asp-action="index">
                    <div>
                        <h6>Search for an order :</h6>
                    </div>
                    <div>
                        <input type="text" name="searchString" style="height:33px;width:400px" />
                        <input type="submit" value="Search" style="height:33px"/>
                    </div>
                                   
                    @*<a asp-controller="Order" asp-action="index">All</a>*@
                </form>
            </div>
            <div class="col-lg-3">
                <button type="button" class="btn btn-success" style="margin-left:150px;margin-top:22px;">
                    <a asp-controller="Order" asp-action="index" style="color:white">All orders</a>
                </button>
            </div>
        </div>       
    </div>
    

    <div class="pt-3 pb-3">
        <table class="table mt-3">
            <thead>
                <tr>
                    <th>
                        Create Time
                    </th>
                    <th>
                        Id
                    </th>
                    <th>
                        Receiver
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CreateTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                <button type="button" class="btn btn-outline-success">
                    <a asp-action="Details" asp-route-id="@item.Id" style="color:black">Details</a>
                </button>
            </td>
        </tr>}
            </tbody>
        </table>
    </div>
    
</div>
