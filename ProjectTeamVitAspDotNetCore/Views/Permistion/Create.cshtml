@model ProjectTeamVitAspDotNetCore.Models.User

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card card-primary">
    <div class="card-header">
        <h3 class="card-title">Create New Account</h3>
    </div>

    <form asp-controller="Permistion" enctype="multipart/form-data" asp-action="Create" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="card-body">
            <div class="form-group">
                <label for="exampleInputEmail1">Email</label>
                <input type="text" asp-for="Email" class="form-control" id="exampleInputEmail1">
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="exampleInputPassword1">First Name</label>
                <input asp-for="Fname" type="text" class="form-control" id="exampleInputPassword1">
                <span asp-validation-for="Fname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="exampleInputPassword1">Last Name</label>
                <input asp-for="Lname" class="form-control" id="exampleInputPassword1">
                <span asp-validation-for="Lname" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="exampleInputPassword1">Birthday</label>
                <input asp-for="Bdate" type="date" class="form-control" id="exampleInputPassword1">
                <span asp-validation-for="Bdate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="exampleInputPassword1">Address</label>
                <input asp-for="Address" class="form-control" id="exampleInputPassword1">
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="exampleInputPassword1">Zip Code</label>
                <input asp-for="ZipCode" class="form-control" id="exampleInputPassword1">
                <span asp-validation-for="ZipCode" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="exampleInputPassword1">Phone</label>
                <input asp-for="Phone" class="form-control" id="exampleInputPassword1">
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="exampleInputPassword1">Password</label>
                <input asp-for="Password" type="password" class="form-control" id="exampleInputPassword1">
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="exampleInputPassword1">Confirm Password</label>
                <input asp-for="ConfirmPassword" type="password" class="form-control" id="exampleInputPassword1">
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label>Gender</label>
                <select asp-for="Gender" class="form-control">
                    <option value="Man">Man</option>
                    <option value="Woman">Woman</option>
                </select>
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="exampleInputFile">Avatar</label>
                <div class="input-group">
                    <div class="custom-file">
                        <input type="file" asp-for="Avatar" class="custom-file-input" id="exampleInputFile">
                        <label class="custom-file-label" for="exampleInputFile">Choose file</label>
                        <span asp-validation-for="Avatar" class="text-danger"></span>
                    </div>
                    <div class="input-group-append">
                        <span class="input-group-text">Upload</span>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="Eable" class="control-label"></label>
                <select asp-for="Eable" class="form-control">
                    <option value="True">Unlock</option>
                    <option value="False">Lock</option>
                </select>
                <span asp-validation-for="IdRole" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdRole" class="control-label">Role</label>
                <select asp-for="IdRole">
                    @foreach (Role role in ViewBag.roles)
                    {
                        <option value="@role.Id">@role.StringRole</option>
                    }
                </select>
                <span asp-validation-for="IdRole" class="text-danger"></span>
            </div>
        </div>
      
        <div class="card-footer">
            <button type="submit" class="btn btn-primary">Create New User</button>
            <a asp-action="index" class="btn btn-success">Back To List</a>
        </div>
    </form>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
