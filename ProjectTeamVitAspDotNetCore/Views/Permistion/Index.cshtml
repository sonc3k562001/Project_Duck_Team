@model IEnumerable<ProjectTeamVitAspDotNetCore.Models.User>

@{
    ViewData["Title"] = "Permision";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<form asp-controller="Permistion" asp-action="index">
    <input type="text" name="searchString" />
    <input type="submit" value="Search" />
    <a asp-controller="Permistion" asp-action="index">All</a>
</form>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Full Name:
            </th>
            <th>
                Email:
            </th>
            <th>
                Role:
            </th>
            <th>
                Eable:
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Fname)
                @Html.DisplayFor(modelItem => item.Lname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdRole) 
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Eable)
            </td>
            <td>
                <a  asp-controller="Permistion" asp-action="Edit" asp-route-id="@item.Email">Edit</a> 
                <a  asp-controller="Permistion" asp-action="Details" asp-route-id="@item.Email">| Details</a> 

      
            </td>
        </tr>
        }
    </tbody>
</table>
