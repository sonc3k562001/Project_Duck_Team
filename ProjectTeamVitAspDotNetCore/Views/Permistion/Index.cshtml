@model IEnumerable<ProjectTeamVitAspDotNetCore.Models.User>

@{
    ViewData["Title"] = "Permision";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Full Name:
            </th>
            <th>
                Email:
            </th>
            <th>
                Role:
            </th>
            <th>
                Eable:
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Fname)
                @Html.DisplayFor(modelItem => item.Lname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdRole) 
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Eable)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Email">Edit</a> |
                <form asp-controller="Permistion" asp-action="Details">
                    <input type="hidden" value="@item.Email" name="email"/>
                    <input type="submit" value="Details" >
                </form>
                <a asp-action="Details" name="email" asp- asp-route-id="@item.Email">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Email">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>
