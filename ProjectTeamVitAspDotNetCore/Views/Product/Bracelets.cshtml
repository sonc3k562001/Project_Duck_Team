<app-products></app-products>
@{ ViewData["Title"] = "Bracelets";
    Layout = "~/Views/Shared/_Layout.cshtml";}


@model PaginatedList<ProjectTeamVitAspDotNetCore.Models.Product>

    <div class="reskin category-introblock wide-introblock bracelets" style="margin-bottom:50px">
        <div class="content">
            <h1>Bracelets</h1>
            <p class="main-copy">Stackable, covetable and oh so giftable, our bracelets were made to be layered. 
            Explore signature charm bracelets and ready-made stacks to create a story of symbols, or discover diamond designs to surprise and delight – there’s a piece for every personality. </p>
            <p>Also: <a asp-controller="Product" asp-action="Bracelets"><b>All Bracelets</b></a> | <a asp-controller="Product" asp-action="Bestsellers"><b>All Bestsellers</b></a></p>
        </div>
    </div>

<section class="col-xs-12 col-md-12">

    <!--Phần này là form search-->
    <!--Phần này là form filter-->
    <section class="col-xs-12 col-md-12 search-option">
        <form asp-controller="Product" asp-action="Bracelets" class="input-group input-group-sm">
            <input class="form-control col-md-3" type="text" name="searchString" />
            <input class="btn btn-sm btn-dark btn-outline-secondary" type="submit" value="Search" />
            <a asp-controller="Product" asp-action="Bracelets"><b>All Bracelets</b></a>
        </form>
        <form asp-controller="Product" asp-action="Bracelets" class="select">
            <select name="color" class="col-md-2">
                <option value="null">Color</option>
                @foreach (Color color in ViewBag.colors)
                {
    <option value="@color.ColorId">@color.Name</option>            }
            </select>
            <select name="brand" class="col-md-2">
                <option value="null">Brand</option>
                @foreach (Brand brand in ViewBag.brands)
                {
    <option value="@brand.BrandId">@brand.BrandName</option>            }
            </select>
            <select name="dim" class="col-md-2">
                <option value="null">Diamond</option>
                @foreach (Dim dim in ViewBag.dims)
                {
    <option value="@dim.DimId">@dim.Name</option>            }
            </select>
            <select name="stone">
                <option value="null">Stone</option>
                @foreach (Stone stone in ViewBag.stones)
                {
    <option value="@stone.StoneId">@stone.Name</option>            }
            </select>
            <select name="metal">
                <option value="null">Metal</option>
                @foreach (Metal metal in ViewBag.metals)
                {
    <option value="@metal.MetalId">@metal.Name</option>            }
            </select>
            <input class="btn btn-sm btn-dark btn-outline-secondary filter" type="submit" value="Apply" />
        </form>

    </section>





    <!--Phần này là chỗ sắp xếp sản phẩm theo giá-->
    @if (ViewBag.order == "price")
    {
        <a asp-action="Bracelets" asp-route-sortOrder="@ViewData["DateSortParm"]" asp-route-currentFilter="@ViewData["CurrentFilter"]" asp-route-currentColor="@ViewData["Color"]" asp-route-currentMetal="@ViewData["Metal"]" asp-route-currentBrand="@ViewData["Brand"]" asp-route-currentDim="@ViewData["Dim"]" asp-route-currentStone="@ViewData["Stone"]" asp-route-pageNumber="@Model.PageIndex"><i class="fas fa-sort-up">Price</i></a>
    }
    else if (ViewBag.order == "price_desc")
    {
        <a asp-action="Bracelets" asp-route-sortOrder="@ViewData["DateSortParm"]" asp-route-currentFilter="@ViewData["CurrentFilter"]" asp-route-currentColor="@ViewData["Color"]" asp-route-currentMetal="@ViewData["Metal"]" asp-route-currentBrand="@ViewData["Brand"]" asp-route-currentDim="@ViewData["Dim"]" asp-route-currentStone="@ViewData["Stone"]" asp-route-pageNumber="@Model.PageIndex"><i class="fas fa-sort-down">Price</i></a>
    }
    else
    {
        <a asp-action="Bracelets" asp-route-sortOrder="@ViewData["DateSortParm"]" asp-route-currentFilter="@ViewData["CurrentFilter"]" asp-route-currentColor="@ViewData["Color"]" asp-route-currentMetal="@ViewData["Metal"]" asp-route-currentBrand="@ViewData["Brand"]" asp-route-currentDim="@ViewData["Dim"]" asp-route-currentStone="@ViewData["Stone"]" asp-route-pageNumber="@Model.PageIndex"><i class="fas fa-sort">Price</i></a>
    }


</section>


<section class="col-xs-12 col-md-12">


    <div class="products_filter-show d-flex flex-row flex-wrap justify-content-center align-content-center col-xs-12 col-md-12">
        @foreach (var item in Model)
        {
            <div class="product col-xs-3 col-md-3">
                <div class="d-flex text-center align-items-center justify-content-center">
                    <a class="p-3 col-xs-12 col-md-12" asp-controller="Product" asp-action="Product_detail" asp-route-id="@item.PdId">

                        <div class="text-center">

                            <img src="~/Images/@item.Image" width="375" height="375" />

                            <h3>
                                @Html.DisplayFor(modelItem => item.Name)
                            </h3>
                            <span>
                                $@Html.DisplayFor(modelItem => item.Price)
                            </span>
                        </div>
                    </a>
                </div>
            </div>}
    </div>

    <!--Phần này là form phân trang-->

    @{
        var prevDisabled = !Model.HasPreviousPage ? "disabled" : "";
        var nextDisabled = !Model.HasNextPage ? "disabled" : "";
    }

    <a asp-action="Bracelets"
       asp-route-sortOrder="@ViewData["CurrentSort"]"
       asp-route-pageNumber="@(Model.PageIndex - 1)"
       asp-route-currentFilter="@ViewData["CurrentFilter"]"
       asp-route-currentColor="@ViewData["Color"]"
       asp-route-currentMetal="@ViewData["Metal"]"
       asp-route-currentBrand="@ViewData["Brand"]"
       asp-route-currentDim="@ViewData["Dim"]"
       asp-route-currentStone="@ViewData["Stone"]"
       class="btn-info btn btn-default @prevDisabled">
        Previous
    </a>

    @{
        double n = ViewBag.CountP;
        double s = ViewBag.pageSize;
        double sn = Math.Ceiling(n / s);

        for (int i = 1; i <= sn; i++)
        {
            if (Model.PageIndex == i)
            {
                <a class="active btn btn-default btn-info">@i</a>
            }
            else
            {
                <a class="btn btn-default btn-info" asp-action="Bracelets" asp-route-sortOrder="@ViewData["CurrentSort"]" asp-route-currentFilter="@ViewData["CurrentFilter"]" asp-route-currentColor="@ViewData["Color"]" asp-route-currentMetal="@ViewData["Metal"]" asp-route-currentBrand="@ViewData["Brand"]" asp-route-currentDim="@ViewData["Dim"]" asp-route-currentStone="@ViewData["Stone"]" asp-route-pageNumber="@i">@i</a>
            }
        }
    }

    <a asp-action="Bracelets"
       asp-route-sortOrder="@ViewData["CurrentSort"]"
       asp-route-pageNumber="@(Model.PageIndex + 1)"
       asp-route-currentFilter="@ViewData["CurrentFilter"]"
       asp-route-currentColor="@ViewData["Color"]"
       asp-route-currentMetal="@ViewData["Metal"]"
       asp-route-currentBrand="@ViewData["Brand"]"
       asp-route-currentDim="@ViewData["Dim"]"
       asp-route-currentStone="@ViewData["Stone"]"
       class="btn-info btn btn-default @nextDisabled">
        Next
    </a>

</section>

<section>
    <div class="category-outro-block">
        <div class="inner">
            <h3><i><b>Bracelets</b></i></h3>
            <p>
                When it comes to bracelets, there is no such thing as too many. Our design team has created this selection of bracelets 
                especially to make an impactful statement, with minimal effort. Designed to be worn, layered, gifted and enjoyed every day,
                the more you layer together, the better. From our bestselling Biography friendship bracelets to elegant diamond bracelets,
                there’s something for every stacking style. Turn on the charm with chains of semi precious gemstones adorned with talismans 
                and symbols, or embrace opulence with adjustable diamond centrepieces set for making a statement. Plus, explore 
                a selection of curated bracelet stacks, styled and ready to wear straight out of the box, with a saving of 10% compared 
                to buying each individually, what’s not to love? Every Astley Clarke bracelet is designed in our London studio, with emphasis on 
                creating meaningful chains, friendship bracelets and diamond bracelets that can be effortlessly mixed and matched together,
                to reflect your personal aesthetic. We work exclusively with noble metals, natural ethically sourced diamonds and responsibly 
                sourced gemstones, taking great care to craft our pieces so that they will last and be loved for years to come,
                whether you’re treating yourself or looking for a unique gift for a loved one. Available with free global delivery 
                and free returns for the UK, USA and Europe, plus luxury gift wrapping.
            </p>
        </div>
    </div>
</section>