@model ProjectTeamVitAspDotNetCore.Models.Product

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="card card-primary">
    <div class="card-header">
        <h3 class="card-title">Create Product</h3>
    </div>

    <form asp-controller="ProductsManager" enctype="multipart/form-data" asp-action="Create" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="card-body">
            <div class="form-group">
                <label for="exampleInputEmail1">Product Code</label>
                <input type="text" asp-for="PdId" class="form-control" id="exampleInputEmail1" placeholder="Enter Product Code">
                <span asp-validation-for="PdId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="exampleInputPassword1">Product Name</label>
                <input asp-for="Name" type="text" class="form-control" id="exampleInputPassword1" placeholder="Enter Product Name">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="exampleInputPassword1">Product Price</label>
                <input asp-for="Price" class="form-control" id="exampleInputPassword1" placeholder="Enter Product Price">
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="exampleInputPassword1">Product Description</label>
                <input asp-for="Description" class="form-control" id="exampleInputPassword1" placeholder="Enter Product Desciption">
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="exampleInputPassword1">Product Size</label>
                <input asp-for="Size" class="form-control" id="exampleInputPassword1" placeholder="Enter Product Size">
                <span asp-validation-for="Size" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="exampleInputFile">File input</label>
                <div class="input-group">
                    <div class="custom-file">
                        <input type="file" asp-for="Image" class="custom-file-input" id="exampleInputFile">
                        <label class="custom-file-label" for="exampleInputFile">Choose file</label>
                        <span asp-validation-for="Image" class="text-danger"></span>
                    </div>
                    <div class="input-group-append">
                    <span class="input-group-text">Upload</span>
                </div>
                </div>
            </div>
            <div class="form-group">
                <label>Color Code</label>
                <select asp-for="ColorId" class="form-control" asp-items="ViewBag.ColorId"></select>
                <span asp-validation-for="ColorId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label>Color Code</label>
                <select asp-for="BrandId" class="form-control" asp-items="ViewBag.BrandId"></select>
                <span asp-validation-for="BrandId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label>Diamond Code</label>
                <select asp-for="DimId" class="form-control" asp-items="ViewBag.DimId"></select>
                <span asp-validation-for="DimId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label>Stone Code</label>
                <select asp-for="StoneId" class="form-control" asp-items="ViewBag.StoneId"></select>
                <span asp-validation-for="StoneId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label>Category Code</label>
                <select asp-for="IdCategory" class="form-control" asp-items="ViewBag.IdCategory"></select>
                <span asp-validation-for="IdCategory" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label>Metal Code</label>
                <select asp-for="MetalId" class="form-control" asp-items="ViewBag.MetalId"></select>
                <span asp-validation-for="MetalId" class="text-danger"></span>
            </div>
        </div>
        <div class="card-footer">
            <button type="submit" class="btn btn-primary">Create New Product</button>
            <a asp-action="index" class="btn btn-success">Back To List</a>
        </div>
    </form>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
