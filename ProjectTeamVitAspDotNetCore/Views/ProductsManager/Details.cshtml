@model ProjectTeamVitAspDotNetCore.Models.Product

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<section class="content pb-3">
    <div class="container-fluid h-100">
        <div class="card card-row card-secondary">
            <div class="card-header">
                <div style="text-align:center">
                    <h2> @Html.DisplayFor(model => model.Name)</h2>
                </div>
            </div>
            <div class="card-body">

                <dl class="row">
                    <dt class="col-sm-2">
                        Description:
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Description)
                    </dd>
                    <dt class="col-sm-2">
                        Price:
                    </dt>
                    <dd class="col-sm-10">
                        $ @Html.DisplayFor(model => model.Price)
                    </dd>
                    <dt class="col-sm-2">
                        Image:
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Image)
                    </dd>
                    <dt class="col-sm-2">
                        Size:
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Size)
                    </dd>
                    <dt class="col-sm-2">
                        Brand:
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Brand.BrandName)
                    </dd>
                    <dt class="col-sm-2">
                        Color:
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Color.Name)
                    </dd>
                    <dt class="col-sm-2">
                        Diamond :
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Dim.Name)
                    </dd>
                    <dt class="col-sm-2">
                        Category:
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Category.TypeName)
                    </dd>
                    <dt class="col-sm-2">
                        Metal:
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Metal.Name)
                    </dd>
                    <dt class="col-sm-2">
                        Stone:
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Stone.Name)
                    </dd>
                </dl>

            </div>
        </div>
    </div>
</section>

<div>
    <a asp-action="index" class="btn btn-success">Back To List</a>
</div>
