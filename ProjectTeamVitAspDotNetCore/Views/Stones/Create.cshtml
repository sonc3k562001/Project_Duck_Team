@model ProjectTeamVitAspDotNetCore.Models.Stone

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h4 style="padding-left:20px;padding-bottom:20px">Create Brands</h4>

<div class="container bg-white pt-3">
    <div class="mt-4" style="margin-left:60px">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <div class="col-lg-6">
                    <div class="form-group">
                        <label asp-for="StoneId" class="control-label"></label>
                        <input asp-for="StoneId" class="form-control" />
                        <span asp-validation-for="StoneId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Description" class="control-label"></label>
                        <input asp-for="Description" class="form-control" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Price" class="control-label"></label>
                        <input asp-for="Price" class="form-control" />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="form-group">
                        <label asp-for="StoneGm" class="control-label"></label>
                        <input asp-for="StoneGm" class="form-control" />
                        <span asp-validation-for="StoneGm" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="StoneCrt" class="control-label"></label>
                        <input asp-for="StoneCrt" class="form-control" />
                        <span asp-validation-for="StoneCrt" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="StoneRate" class="control-label"></label>
                        <input asp-for="StoneRate" class="form-control" />
                        <span asp-validation-for="StoneRate" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="StoneAmt" class="control-label"></label>
                        <input asp-for="StoneAmt" class="form-control" />
                        <span asp-validation-for="StoneAmt" class="text-danger"></span>
                    </div>
                </div>
            </div>


            <div class="row pb-5 pt-4">
                <div class="col-lg-6">
                    <div class="form-group">
                        <input type="submit" value="Create Product" class="btn btn-success float-right" />
                    </div>
                </div>
                <div class="col-lg-6">
                    <button type="button" class="btn btn-danger">
                        <a asp-action="Index" class="text-white">Back to List</a>
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
