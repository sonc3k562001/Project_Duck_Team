@model IEnumerable<WebApplication1.Models.Customer>

@{
    ViewData["Title"] = "Customer List Manager";
    Layout = "LayoutAdmin";
}

<h1>Customer</h1>

<p>
    <a asp-action="CustomerInfo">Create New</a>
</p>

<nav class="navbar navbar-light bg-white">
    <form class="form-inline col-12" asp-action="CustomerList" method="get">
        <div class="col-10">
            <input class="form-control mr-sm-2" style="width:100%" name="searchString" type="search" value="@ViewData["GetCustomerdeltails"]" placeholder="Search" aria-label="Search">
        </div>
        <div class="col-2">
            <input type="submit" value="Search" class="btn btn-outline-success my-2 my-sm-0" />
        </div>
        <a asp-action="CustomerList">Get All</a>
    </form>
</nav>
<div class="mt-3">
    <table class="table bg-white">
        <thead>
            <tr>
                <th>
                    Name
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Birthday)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Phone)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Address)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.CustomerName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Birthday)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Phone)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Address)
                    </td>
                    <td>
                        <div class="btn btn-success buttonCus">@Html.ActionLink("Edit", "Edit", new { id = item.Id })</div>
                        <div class="btn btn-danger buttonCus">@Html.ActionLink("Delete", "Delete", new { id = item.Id })</div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<style>
    .buttonCus a {
        text-decoration: none;
        color: #fff;
    }
</style>